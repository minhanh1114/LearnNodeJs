<div class='mt-4'>
    <h3>Cập nhật khóa học</h3>
    <form method='POST' action='/course/update/{{course._id}}?_method=PUT'>
        <div class='mb-3'>
            <label for='exampleInputEmail1' class='form-label'>Name</label>
            <input type='text' name='name' value='{{course.name}}' class='form-control' />
        </div>
        <div class='mb-3'>
            <label for='exampleInputPassword1' class='form-label'>Mô tả</label>
            <textarea name='description' class='form-control'>
                {{course.description}}
            </textarea>
        </div>

        <div class='mb-3'>
            <label for='exampleInputPassword1' class='form-label'>VideoID</label>
            <input type='text' name='videoId' value='{{course.videoId}}' class='form-control' />
        </div>

        <button type='submit' class='btn btn-primary'>Sửa</button>
    </form>
</div>